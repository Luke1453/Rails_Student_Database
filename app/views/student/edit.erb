<h1>Edit Student Detail</h1>

<%= form_for @student, :url =>{:action => "update", :id =>@student} do |f| %>

<p>Student First Name: <%= f.text_field 'first_name' %></p>
<p>Student Last Name: <%= f.text_field  'last_name' %></p>
<p>Student Personal ID: <%= f.text_field  'p_id' %></p>
<p>Student Gender: <%= f.select :gender, ['Male', 'Female'] %></p>
<p>Student Address: <br/><%= f.text_area 'address' %></p>
<p>Student Phone Nr: <%= f.text_field  'phone_nr' %></p>
<p>Study Program: <%= f.select :study_program, ['Computer Engineering', 'Computer Systems', 'Telecommunications Systems', 'Electronics Engineering', 'Information Systems', 'Software Engineering'] %></p>
<p>Study Type: <%= f.select :study_type, ['Regular', 'Online'] %></p>

<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>